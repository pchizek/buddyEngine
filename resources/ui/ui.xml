<?xml version="1.0" encoding="utf-8"?>

<ui>

  <assets>

    <!-- Test Button -->
    <asset alias="testButton">
      <file>testButton.png</file>
    </asset>

    <!-- Exit -->
    <asset alias="menuButton">
      <file>testMenuButton.png</file>
    </asset>

    <!-- Background -->
    <asset alias="menuBackground">
      <file>testMenuBackground.png</file>
    </asset>
  </assets>

  <uiset name="gameplay">
    
    <mousebutton>
      <origin>[0,0]</origin>
      <texture>testButton</texture>
      
      <function>
        <name>switchUiSet</name>
        <args>[1]</args>
      </function>
      
      <function>
        <name>setControlScheme</name>
        <args>[1]</args>
      </function>
      
    </mousebutton>
    
  </uiset>

  <uiset name="gameMenu">

    <background>
      <origin>[80,10]</origin>
      <texture>menuBackground</texture>
    </background>

    <mousebutton>
      <origin>[128,34]</origin>
      <texture>testButton</texture>
      <text>"Resume"</text>
      
      <function>
        <name>switchUiSet</name>
        <args>[0]</args>
      </function>

      <function>
        <name>setControlScheme</name>
        <args>[0]</args>
      </function>
      
    </mousebutton>
    
    <mousebutton>
      <origin>[128,146]</origin>
      <texture>testButton</texture>
      <text>"Exit"</text>

      <function>
        <name>closeGame</name>
        <args>[0]</args>
      </function>
      
    </mousebutton>
    
  </uiset>

</ui>