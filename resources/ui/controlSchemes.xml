<?xml version="1.0" encoding="utf-8"?>



<schemes>

<scheme name="flyingCameraKeyboard">
   
  <mouseEnable>false</mouseEnable>
  
  <keybind>
    <key>w</key>
    <function>moveCamera</function>
    <args>[1,-5]</args>
  </keybind>

  <keybind>
    <key>s</key>
    <function>moveCamera</function>
    <args>[1,5]</args>
  </keybind>

  <keybind>
    <key>a</key>
    <function>moveCamera</function>
    <args>[0,-5]</args>
  </keybind>

  <keybind>
    <key>d</key>
    <function>moveCamera</function>
    <args>[0,5]</args>
  </keybind>

  <keybind>
    <key>Escape</key>
    <function>closeGame</function>
    <args>[0,0]</args>
  </keybind>
  
</scheme>

<scheme name="menu">

  <mouseEnable>false</mouseEnable>

  <keybind>
    
    <key>Escape</key>
    
    <function>
      <name>switchUiSet</name>
      <args>gameplay</args>
    </function>

    <function>
      <name>setControlScheme</name>
      <args>flyingCameraKeyboard</args>
    </function>
    
  </keybind>
  
</scheme>

  
</schemes>